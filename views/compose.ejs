<%- include("partials/header") -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Post Title:</label>
        <input type="text" name="postTitle" id="title" class="form-control" autofocus/>
        <br />
        <label for="post">Write your here:</label>
        <br />
        <textarea
            name="postBody"
            id="post"
            cols="150"
            rows="15"
            class="form-control"
        ></textarea>
        <br />
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer") -%>
